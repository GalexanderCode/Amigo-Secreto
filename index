    <!-- Supabase Client -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/supabase-js/2.38.0/index.umd.js"></script>
    
    <script>
        // Configuraci√≥n de Supabase
        const SUPABASE_URL = 'https://qlshdsbeskbsqgigdqon.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InFsc2hkc2Jlc2tic3FnaWdkcW9uIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MjY2Njg0NzksImV4cCI6MjA0MjI0NDQ3OX0.sb_publishable_kuF84qQ_q7azPYubu1RdpA_RflY0BNg';

        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        // Variables globales
        let participants = [];
        let drawResults = [];
        let gameState = 'registration';
        let gameSettings = {};
        let isAdminLoggedIn = false;

        // Inicializar aplicaci√≥n
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                await initializeApp();
                setupEventListeners();
                startRealtimeSubscription();
                document.getElementById('connection-status').textContent = 'üü¢ Conectado';
                document.getElementById('connection-status').className = 'connection-status connected';
            } catch (error) {
                console.error('Error initializing app:', error);
                showMessage('Error de conexi√≥n. Por favor recarga la p√°gina.', 'error');
                document.getElementById('connection-status').textContent = 'üî¥ Error de conexi√≥n';
                document.getElementById('connection-status').className = 'connection-status disconnected';
            }
        });

        async function initializeApp() {
            // Crear tablas si no existen
            await createTablesIfNeeded();
            
            // Cargar datos iniciales
            await loadGameData();
            
            // Mostrar contenido
            document.getElementById('loading').style.display = 'none';
            document.getElementById('main-content').style.display = 'block';
            
            updateUI();
        }

        async function createTablesIfNeeded() {
            // La tabla participants
            const { error: participantsError } = await supabase.rpc('create_participants_table');
            // La tabla game_settings
            const { error: settingsError } = await supabase.rpc('create_game_settings_table');
            // La tabla draw_results
            const { error: resultsError } = await supabase.rpc('create_draw_results_table');

            // Si las funciones RPC no existen, las tablas se crear√°n autom√°ticamente al insertar datos
        }

        async function loadGameData() {
            try {
                // Cargar participantes
                const { data: participantsData, error: participantsError } = await supabase
                    .from('participants')
                    .select('*')
                    .order('created_at', { ascending: true });

                if (participantsError) throw participantsError;
                participants = participantsData || [];

                // Cargar configuraci√≥n del juego
                const { data: settingsData, error: settingsError } = await supabase
                    .from('game_settings')
                    .select('*')
                    .single();

                if (!settingsError && settingsData) {
                    gameSettings = settingsData;
                    gameState = settingsData.game_state || 'registration';
                } else {
                    gameSettings = { game_state: 'registration', admin_code: '' };
                }

                // Cargar resultados si existen
                if (gameState === 'drawn') {
                    const { data: resultsData, error: resultsError } = await supabase
                        .from('draw_results')
                        .select('*');

                    if (!resultsError && resultsData) {
                        drawResults = resultsData;
                    }
                }
            } catch (error) {
                console.error('Error loading game data:', error);
                showMessage('Error cargando datos del juego', 'error');
            }
        }

        function setupEventListeners() {
            document.getElementById('participant-form').addEventListener('submit', handleFormSubmit);
        }

        function startRealtimeSubscription() {
            // Suscribirse a cambios en participantes
            supabase
                .channel('participants_changes')
                .on('postgres_changes', { 
                    event: '*', 
                    schema: 'public', 
                    table: 'participants' 
                }, async (payload) => {
                    await loadGameData();
                    updateUI();
                })
                .subscribe();

            // Suscribirse a cambios en configuraci√≥n del juego
            supabase
                .channel('game_settings_changes')
                .on('postgres_changes', { 
                    event: '*', 
                    schema: 'public', 
                    table: 'game_settings' 
                }, async (payload) => {
                    await loadGameData();
                    updateUI();
                })
                .subscribe();

            // Suscribirse a cambios en resultados
            supabase
                .channel('draw_results_changes')
                .on('postgres_changes', { 
                    event: '*', 
                    schema: 'public', 
                    table: 'draw_results' 
                }, async (payload) => {
                    await loadGameData();
                    updateUI();
                    showMessage('¬°Sorteo realizado! Revisa tu resultado.', 'success');
                })
                .subscribe();
        }

        function updateUI() {
            updateParticipantsList();
            updateGameStatus();
            updateAdminSection();
        }

        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });

            document.getElementById(tabName + '-tab').classList.add('active');
            document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
        }

        async function handleFormSubmit(e) {
            e.preventDefault();
            
            if (gameState === 'drawn') {
                showMessage('No se pueden agregar m√°s participantes despu√©s del sorteo.', 'error');
                return;
            }

            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim().toLowerCase();
            const city = document.getElementById('city').value.trim();

            if (!name || !email || !city) {
                showMessage('Por favor, completa todos los campos.', 'error');
                return;
            }

            // Validar que no exista el email
            if (participants.some(p => p.email.toLowerCase() === email)) {
                showMessage('Este correo electr√≥nico ya est√° registrado.', 'error');
                return;
            }

            try {
                const { data, error } = await supabase
                    .from('participants')
                    .insert([
                        { 
                            name: name, 
                            email: email, 
                            city: city 
                        }
                    ]);

                if (error) throw error;

                document.getElementById('participant-form').reset();
                showMessage(`¬°${name} se ha unido al intercambio exitosamente!`, 'success');
            } catch (error) {
                console.error('Error adding participant:', error);
                showMessage('Error al registrar participante. Intenta de nuevo.', 'error');
            }
        }

        function updateParticipantsList() {
            const container = document.getElementById('participants-container');
            const count = document.getElementById('participant-count');
            
            count.textContent = participants.length;

            if (participants.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #666;">A√∫n no hay participantes registrados.</p>';
                return;
            }

            container.innerHTML = participants.map(participant => `
                <div class="participant-item">
                    <div class="participant-info">
                        <div class="participant-name">${participant.name}</div>
                        <div class="participant-city">üìç ${participant.city}</div>
                    </div>
                </div>
            `).join('');
        }

        function updateGameStatus() {
            const statusDiv = document.getElementById('game-status');
            
            if (gameState === 'drawn') {
                statusDiv.className = 'game-status status-drawn';
                statusDiv.innerHTML = '‚úÖ ¬°Sorteo realizado! Verifica tu resultado abajo.';
            } else {
                statusDiv.className = 'game-status status-waiting';
                statusDiv.innerHTML = `üé≤ Esperando sorteo... (${participants.length} participantes registrados)`;
            }
        }

        async function checkMyResult() {
            const email = document.getElementById('check-email').value.trim().toLowerCase();
            
            if (!email) {
                showMessage('Por favor ingresa tu correo electr√≥nico.', 'error');
                return;
            }

            if (gameState !== 'drawn') {
                showMessage('El sorteo a√∫n no se ha realizado.', 'info');
                return;
            }

            const myResult = drawResults.find(result => 
                result.giver_email.toLowerCase() === email
            );

            if (!myResult) {
                showMessage('No se encontr√≥ tu participaci√≥n en el sorteo.', 'error');
                return;
            }

            document.getElementById('my-receiver').textContent = myResult.receiver_name;
            document.getElementById('receiver-city').textContent = `üìç ${myResult.receiver_city}`;
            document.getElementById('my-result-section').style.display = 'block';
            
            showMessage('¬°Resultado encontrado!', 'success');
        }

        function updateAdminSection() {
            const drawBtn = document.getElementById('draw-btn');
            
            if (gameSettings.admin_code && !isAdminLoggedIn) {
                document.getElementById('admin-setup').style.display = 'none';
                document.getElementById('admin-login').style.display = 'block';
                document.getElementById('admin-controls').style.display = 'none';
            } else if (!gameSettings.admin_code) {
                document.getElementById('admin-setup').style.display = 'block';
                document.getElementById('admin-login').style.display = 'none';
                document.getElementById('admin-controls').style.display = 'none';
            } else if (isAdminLoggedIn) {
                document.getElementById('admin-setup').style.display = 'none';
                document.getElementById('admin-login').style.display = 'none';
                document.getElementById('admin-controls').style.display = 'block';
                
                if (participants.length >= 3) {
                    drawBtn.disabled = gameState === 'drawn';
                    drawBtn.textContent = gameState === 'drawn' ? '‚úÖ Sorteo Realizado' : 'üé≤ Realizar Sorteo';
                } else {
                    drawBtn.disabled = true;
                    drawBtn.textContent = `üé≤ Se necesitan al menos 3 participantes (${participants.length}/3)`;
                }

                if (gameState === 'drawn') {
                    showAdminResults();
                }
            }
        }

        async function setAdminCode() {
            const code = document.getElementById('admin-code').value.trim();
            if (!code) {
                showMessage('Por favor ingresa un c√≥digo.', 'error');
                return;
            }

            try {
                const { error } = await supabase
                    .from('game_settings')
                    .upsert([
                        { 
                            id: 1,
                            admin_code: code,
                            game_state: gameState 
                        }
                    ]);

                if (error) throw error;

                gameSettings.admin_code = code;
                isAdminLoggedIn = true;
                updateAdminSection();
                showMessage('C√≥digo de administrador establecido.', 'success');
            } catch (error) {
                console.error('Error setting admin code:', error);
                showMessage('Error al establecer c√≥digo.', 'error');
            }
        }

        function loginAdmin() {
            const code = document.getElementById('admin-login-code').value.trim();
            if (code === gameSettings.admin_code) {
                isAdminLoggedIn = true;
                updateAdminSection();
                showMessage('Acceso de administrador concedido.', 'success');
            } else {
                showMessage('C√≥digo incorrecto.', 'error');
            }
        }

        async function performDraw() {
            if (!isAdminLoggedIn) {
                showMessage('Acceso denegado.', 'error');
                return;
            }

            if (participants.length < 3) {
                showMessage('Se necesitan al menos 3 participantes para realizar el sorteo.', 'error');
                return;
            }

            if (gameState === 'drawn') {
                showMessage('El sorteo ya fue realizado.', 'error');
                return;
            }

            try {
                // Algoritmo de sorteo
                const shuffled = [...participants];
                let attempts = 0;
                let validDraw = false;

                while (!validDraw && attempts < 1000) {
                    for (let i = shuffled.length - 1; i > 0; i--) {
                        const j = Math.floor(Math.random() * (i + 1));
                        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
                    }

                    validDraw = true;
                    for (let i = 0; i < participants.length; i++) {
                        if (participants[i].id === shuffled[i].id) {
                            validDraw = false;
                            break;
                        }
                    }
                    attempts++;
                }

                if (!validDraw) {
                    showMessage('Error al realizar el sorteo. Por favor, int√©ntalo de nuevo.', 'error');
                    return;
                }

                // Crear resultados
                const results = participants.map((giver, index) => ({
                    giver_name: giver.name,
                    giver_email: giver.email,
                    receiver_name: shuffled[index].name,
                    receiver_city: shuffled[index].city
                }));

                // Guardar en Supabase
                const { error: resultsError } = await supabase
                    .from('draw_results')
                    .insert(results);

                if (resultsError) throw resultsError;

                // Actualizar estado del juego
                const { error: settingsError } = await supabase
                    .from('game_settings')
                    .upsert([
                        { 
                            id: 1,
                            admin_code: gameSettings.admin_code,
                            game_state: 'drawn'
                        }
                    ]);

                if (settingsError) throw settingsError;

                gameState = 'drawn';
                drawResults = results;
                
                showMessage('¬°Sorteo realizado exitosamente!', 'success');
                updateUI();

            } catch (error) {
                console.error('Error performing draw:', error);
                showMessage('Error al realizar el sorteo. Intenta de nuevo.', 'error');
            }
        }

        function showAdminResults() {
            if (!isAdminLoggedIn) return;

            const container = document.getElementById('admin-results-container');
            container.innerHTML = drawResults.map(result => `
                <div class="result-item">
                    <div class="gift-pair">
                        <span class="giver">${result.giver_name}</span> 
                        ‚Üí regala a ‚Üí 
                        <span class="receiver">${result.receiver_name}</span>
                        <div style="font-size: 0.9em; margin-top: 5px; color: #666;">
                            üìß ${result.giver_email} | üìç ${result.receiver_city}
                        </div>
                    </div>
                </div>
            `).join('');

            document.getElementById('admin-results').style.display = 'block';
        }

        async function resetGame() {
            if (!isAdminLoggedIn) {
                showMessage('Acceso denegado.', 'error');
                return;
            }

            if (!confirm('¬øEst√°s seguro de que quieres reiniciar todo el juego? Se eliminar√°n todos los participantes y resultados.')) {
                return;
            }

            try {
                // Eliminar participantes
                const { error: participantsError } = await supabase
                    .from('participants')
                    .delete()
                    .neq('id', 0); // Eliminar todos

                if (participantsError) throw participantsError;

                // Eliminar resultados
                const { error: resultsError } = await supabase
                    .from('draw_results')
                    .delete()
                    .neq('id', 0); // Eliminar todos

                if (resultsError) throw resultsError;

                // Reiniciar configuraci√≥n
                const { error: settingsError } = await supabase
                    .from('game_settings')
                    .delete()
                    .neq('id', 0); // Eliminar todos

                if (settingsError) throw settingsError;

                // Reiniciar variables locales
                participants = [];
                drawResults = [];
                gameState = 'registration';
                gameSettings = {};
                isAdminLoggedIn = false;

                // Ocultar secciones
                document.getElementById('admin-results').style.display = 'none';
                document.getElementById('my-result-section').style.display = 'none';
                
                updateUI();
                showMessage('Juego reiniciado exitosamente.', 'success');

            } catch (error) {
                console.error('Error resetting game:', error);
                showMessage('Error al reiniciar el juego.', 'error');
            }
        }

        function showMessage(message, type) {
            const container = document.getElementById('status-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = type;
            messageDiv.textContent = message;
            
            container.appendChild(messageDiv);
            
            setTimeout(() => {
                if (messageDiv.parentNode) {
                    messageDiv.remove();
                }
            }, 5000);
        }
    </script>
</body>
</html>
